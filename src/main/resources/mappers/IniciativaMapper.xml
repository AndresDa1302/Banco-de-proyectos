<mapper namespace="edu.eci.cvds.samples.persistence.mybatisimpl.mappers.IniciativaMapper">
    <resultMap type='Iniciativa' id='IniciativaResult'>
        <id property='id' column='id_iniciativas'/>
        <result property='descripcion' column='descripcion'/>
        <result property='fecha' column='fecha'/>
        <result property='estado' column='estado'/>
        <association property="proponente" javaType="Proponente" columnPrefix="pr_"
                     resultMap="edu.eci.cvds.samples.persistence.mybatisimpl.mappers.ProponenteMapper.ProponenteResult"></association>
    </resultMap>

    <select  parameterType="map" id="consultarIniciativa" resultMap="IniciativaResult">
        SELECT
            ini.id,
            ini.descripcion,
            ini.fecha,
            ini.area,
        FROM USUARIOS AS ini
        WHERE ini.id=#{inid};
    </select>


    <select  parameterType="map" id="consultarIniciativas" resultMap="IniciativaResult">
        SELECT
        ini.id,
        ini.descripcion,
        ini.fecha,
        ini.area,
        FROM USUARIOS AS ini;

    </select>
    <insert id="registrarIniciativa" parameterType="map">
        insert into iniciativas values(#{in.id},#{in.descripcion},#{in.fecha},#{in.proponente.getCorreo()},#{in.estado});
    </insert>

        
</mapper>

